<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://postScreen.caption">
    <data>
        <collection id="postsDc"
                    class="com.company.jmixpm.entity.Post">
            <loader id="postsDl"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout expand="postsTable" spacing="true">
        <table id="postsTable"
               width="100%"
               dataContainer="postsDc">
            <actions>
                <action id="viewUserInfo"
                        caption="msg://viewUserInfo.caption"
                        trackSelection="true"
                        icon="VIEW_ACTION"/>
            </actions>
            <buttonsPanel>
                <button action="postsTable.viewUserInfo"/>
            </buttonsPanel>
            <columns>
                <column id="title"/>
                <column id="body"/>
            </columns>
        </table>
        <pagination id="pagination"
                    itemsPerPageDefaultValue="20">
            <loaderProvider loaderId="postsDl"/>
        </pagination>
    </layout>
</window>